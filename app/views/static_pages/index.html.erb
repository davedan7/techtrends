<div class="main" ng-controller="SearchController">
  <div ng-show="landingPage" id="index-banner" class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <br><br>
        <!-- <h1 class="header center yellow-text text-lighten-2">TechTrends</h1> -->
        <div class="row center">
          <h5 class="header col s12 landing-quote white-text">A data visualization aid for web developers looking to network.</h5>
        </div>
        <div class="row center">
          <a ng-click="hideIntroPage()" id="download-button" class="btn-large waves-effect waves-light teal darken-2">Get Started</a>
        </div>
        <br><br>

      </div>
    </div>
    <div class="parallax"><%= image_tag("background_code.jpg", alt: "Unsplashed background img 1") %></div>
  </div>
  <br>

  <div class="container">
    <div class="row" ng-show="searchField">
      <form class="center col s4 offset-s4">
        <input ng-model="zipcode" type="text" class="center-align" placeholder="Insert Your Zipcode" required>
        <a ng-click="submitSearch()" class="waves-effect waves-light btn" id="search-button">Submit</a>
      </form>
    </div>
    <div ng-show="zipSearch" class="center">
      <h3> Jobs by Title for {{ zipcode }}</h3>
    </div>
  </div>

  <div id="chart"></div>

  <ul id="meetupResults">
  </ul>

  <div class="row" ng-repeat="meetup in meetupEvents">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{meetup.name}}</span>
          <p>{{meetup.description}}</p>
        </div>
        <div class="card-action">
          <a href="{{meetup.link}}">Visit {{meetup.name}}</a>
        </div>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="section">

      <!--   Icon Section   -->
      <ul id="staggered-test">

        <li class="homeInfo">
          <div class="row">
            <div class="col s12 m4">
              <div class="icon-block">
                <h2 class="center blue-grey-text"><i class="mdi-action-search"></i></h2>
                <h5 class="center black-text text-darken-4">See Trends</h5>

                <p class="light">Enter a keyword or twitter handle and get a fast summary of what people are saying.</p> </div>
            </div>

            <div class="col s12 m4">
              <div class="icon-block">
                <h2 class="center blue-grey-text"><i class="mdi-content-content-paste"></i></h2>
                <h5 class="center black-text text-darken-4">Analyze Postings</h5>

                <p class="light">Utilize Natural Language Processing to analyze and rate an overall sentiment for your searches</p>
              </div>
            </div>

            <div class="col s12 m4">
              <div class="icon-block">
                <h2 class="center blue-grey-text"><i class="mdi-action-trending-up"></i></h2>
                <h5 class="center black-text text-darken-4">Learn</h5>

                <p class="center light">Schedule an automated email to track how a saved search is trending over time.</p>
              </div>
            </div>
          </div>

        </li>
        </ol>

    </div>
  </div>

</div>
