<div class="main" ng-controller="SearchController">

  <!-- Navbar -->
  <nav class="grey darken-4 z-depth-2" role="navigation">
    <div class="nav-wrapper container">
      <a id="logo-container" href="/" class="brand-logo yellow-text text-lighten-3 thin" id="logo">FutureProof</a>
      <ul class="right hide-on-med-and-down">
        <li><a href="" ng-click="resetSearch()" class="yellow-text text-lighten-3 thin">New Search</a></li>
      </ul>

      <!-- Mobile Navbar -->
      <ul id="nav-mobile" class="side-nav cyan darken-2">
        <li><a href="" ng-click="resetSearch()" class="yellow-text text-lighten-3 thin">New Search</a></li>
      </ul>
      <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
    </div>
  </nav>

  <!-- Intro Page -->
  <div ng-show="landingPage" id="index-banner" class="parallax-container valign-wrapper">
    <div class="section no-pad-bot">
      <div class="container">
        <br><br>
        <!-- <h1 class="header center yellow-text text-lighten-2">TechTrends</h1> -->
        <div class="row center">
          <h5 class="header col s12 landing-quote white-text text-darken-3 thin">A data visualization aid for web developers looking to network.</h5>
        </div>
        <div class="row center">
          <a href="" ng-click="hideIntroPage()" id="download-button" class="btn-large waves-effect waves-light yellow lighten-2 black-text">Get Started</a>
        </div>
        <br><br>

      </div>
    </div>
    <div class="parallax"><%= image_tag("clean-code.jpg", alt: "Unsplashed background img 1") %></div>
  </div>
  <br>

  <!-- Search Field -->
  <div class="container" id="search-field">
    <div class="row" ng-show="searchField">
      <form class="center col s4 offset-s4">
        <input ng-model="zipcode" type="text" class="center-align" placeholder="Insert Your Zip Code" required>
        <button ng-click="submitSearch()" class="waves-effect waves-light btn z-depth-2 yellow darken-1 black-text" id="search-button" onclick="Materialize.toast('Click a language for skill breakdown!', 3000)">Submit</button>
        <p class="center-align"><a class="tooltipped black-text" data-position="bottom" data-delay="50" data-tooltip="Put in your zip code and hit submit to see current language trends.">Need help?</a></p>
      </form>
    </div>
    <div ng-show="zipSearch" class="center row">
      <h5 ng-hide ="showMeetups" class="medium job-chart">Developer jobs in {{ zipcode }}</h5>
      <h5 ng-show = "showMeetups"class="medium job-chart">{{ breakdownLanguage }} Meetups for {{ zipcode }}</h5>
    </div>
  </div>

  <!-- Chart -->
  <div id="chart" ng-show="showChart"></div>
  <p class="center-align" ng-show="chartHelper"><a class="tooltipped black-text" data-position="bottom" data-delay="50" data-tooltip="Click on a language for more details.">Need help?</a></p>

  <!-- Meetup results -->

  <div ng-show="showMeetups" class="row">
    <div class="col s8 offset-s2" ng-repeat="meetup in meetupEvents">
      <div class="card grey darken-2 z-depth-3">
        <div class="card-content white-text thin">
          <span class="card-title orange-text text-lighten-2 thin">{{meetup.name}}</span>
          <p class="thin">{{meetup.description | stripHtmlTags }}</p>
        </div>
        <div class="card-action">
          <a href="{{meetup.link}}" class="orange-text text-lighten-3" >Check them out on Meetup</a>
        </div>
      </div>
    </div>
  </div>


  <!-- Homepage Info -->
  <div ng-show="landingPage" class="container">
    <div class="section">

      <!--   Icon Section   -->
      <div class="row">
        <div class="col s12 m4">
          <div class="icon-block">
            <h2 class="center grey-text"><i class="mdi-action-trending-up"></i></h2>
            <h5 class="center black-text text-darken-4">See Current Job Trends</h5>

            <p class="light">Enter a zipcode to see the occurrance of programming languages based on job postings from six leading job-search engines.</p>
          </div>
        </div>

        <div class="col s12 m4">
          <div class="icon-block">
            <h2 class="center grey-text"><i class="mdi-action-search"></i></h2>
            <h5 class="center black-text text-darken-4">Analyze Popular Skill Sets</h5>

            <p class="light">Click on a language to see a breakdown of relevant skills and frameworks contained within a posts' job-description. </p>
          </div>
        </div>

        <div class="col s12 m4">
          <div class="icon-block">
            <h2 class="center grey-text"><i class="mdi-action-perm-identity"></i></h2>
            <h5 class="center black-text text-darken-4">Network for the Future</h5>

            <p class="center light">Click again, and see local Meetups associated with that skill set, sorted by relevance and number of active members.</p>
          </div>
        </div>
      </div>


    </div>
  </div>

  <!-- footer -->
  <footer ng-show="landingPage" class="grey darken-3">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">
          <h5 class="yellow-text text-lighten-3 thin">About Me</h5>
          <p class="light white-text">I am a student at the Turing School of Software and Design, a seven-month immersive web-development training program focusing on full-stack Ruby and Javascript.</p>
        </div>

        <div class="col l6 s12">
          <h5 class="yellow-text text-lighten-3 thin">Connect</h5>
          <ul>
            <li><a class="white-text" href="https://github.com/davedan7">Github</a></li>
            <li><a class="white-text" href="https://www.linkedin.com/in/davidjdaniel">LinkedIn</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="footer-copyright grey darken-2">
      <div class="container">
        Powered by <a class="orange-text text-lighten-3" href="http://www.turing.io">Turing</a>
      </div>
    </div>
  </footer>

</div>
