<div class="main" ng-controller="SearchController">
  <br>
  <div class="container">

    <div class="row" ng-hide="zipSearch">
      <form class="col s3 offset-s4 center">
        <div class="row">
          <div class="input-field">
            <input ng-model="zipcode" id="zip" type="text" class="validate center-align">
            <!-- <button type="button" ng-click="submitSearch()" class="waves-effect waves-light btn">Submit</button> -->
            <a ng-click="submitSearch()" class="waves-effect waves-light btn">Submit</a>
            <label for="zip">Insert Your Zipcode</label>
          </div>
        </div>
      </form>
    </div>

    <div ng-show="zipSearch" class="center">
      <h3> Jobs by Title for {{ zipcode }}</h3>
    </div>

  </div>
  <div id="chart"></div>
  <!-- <div id="chart1"></div> -->

    <ul id="meetupResults">
    </ul>

    <div class="row" ng-repeat="meetup in meetupEvents">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">{{meetup.name}}</span>
            <p>{{meetup.description}}</p>
          </div>
          <div class="card-action">
            <a href="{{meetup.link}}">Visit {{meetup.name}}</a>
          </div>
        </div>
      </div>
    </div>

</div>